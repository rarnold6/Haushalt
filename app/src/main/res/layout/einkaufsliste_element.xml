<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout_einkaufsliste_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/element"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="hello"/>

        <TextView
            android:id="@+id/anzahl_und_einheit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="2 Stk"/>

        <CheckBox
            android:id="@+id/einkauf_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/weniger_bekommen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/arrow_down_float" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/actually_got"
        android:layout_below="@+id/linear_layout_einkaufsliste_element"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" >
    </LinearLayout>


</RelativeLayout>